    {
      "name": "add_observations",
      "title": "Add Observations",
      "description": "Add new observations to existing entities in the knowledge graph",
      "inputSchema": {
        "type": "object",
        "properties": {
          "observations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "entityName": {
                  "type": "string",
